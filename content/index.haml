  "route": "index",
  "title": "Hasnain Lakhani's Website",
  "homepage": true,
  
  "sidebar": {
  
    "links": {
      "Resume": "resume/",
      "NewsMap": "http://newsmap.mhlakhani.com/",
      "QuranApp": "http://quranapp.net/"
    },
    
    "contact": {
      "Email": "mailto:m.hasnain.lakhani@gmail.com"
    }
  },
  
  "calltoaction": "Hello!",
  "catchphrase": "You've come to my deserted corner of the internet. I write code and try to blog about it in my spare time. You might also find some stuff about my work in here.",
  
  "visitbuttons": {
    "View my resume": "resume/",
    "Visit my blog": "blog/"
  },
  
  "griditems": {
    "NewsMap": {
      "url": "http://newsmap.mhlakhani.com",
      "description": "I wrote a small little side project to help you explore news sources around the world.",
      "tag": "NewsMap"
    }, 
    "QuranApp": {
      "url": "http://quranapp.net",
      "description": "I wrote a small app called QuranApp",
      "tag": "QuranApp"
