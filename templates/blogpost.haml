-extends "base.haml"

-block css
  %link href="/static/css/prettify.css" rel="stylesheet"

-block script
  %script type="text/javascript" src="/static/js/prettify.js"

-block content

  %h1 << {{ title }}
  %h3 << {{ date }}
  %h3
    Tagged with: 
    -for tag in tags
      <a href="{{ url_for('tag', tag=tag) }}">{{ tag }}</a>{% if not loop.last %},{% endif %}
  
  {{ content | safe }}
  
  .comments
    #disqus_thread
    %script type="text/javascript"
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'mhlakhani-blog'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    
    %noscript
      Please enable JavaScript to view the 
      %a href="http://disqus.com/?ref_noscript"
        comments powered by Disqus.
    
    %a.dsq-brlink href="http://disqus.com"
      comments powered by 
      %span class="logo-disqus" << Disqus
